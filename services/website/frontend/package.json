{
  "name": "frontend-transcendence",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "build": "npm run clean && npm run build:ts && npm run build:css",
    "serve": "ws --spa index.html --rewrite '/api/game/(.*) -> http://localhost:3601/$1' '/api/tournament/(.*) -> http://localhost:3602/$1'",
    "dev": "concurrently -k -n TS,CSS,WEB \"tsc -w -p tsconfig.json\" \"tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --watch\" \"npm run serve\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "local-web-server": "^5.4.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "lws-rewrite": "https://github.com/lozercaustic/rewrite#feat/ws"
  }
}

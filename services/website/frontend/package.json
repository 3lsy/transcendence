{
  "name": "frontend-transcendence",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "build": "npm run clean && npm run build:ts && npm run build:css",
    "dev": "concurrently -k -n TS,CSS,WEB \"tsc -w -p tsconfig.json\" \"tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --watch\" \"serve -s . -l 5173\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  }
}
